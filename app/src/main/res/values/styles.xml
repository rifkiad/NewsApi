<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_fragment_author">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="list_fragment_title">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="list_fragment_date">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="list_fragment_description">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_fragment_image">
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="shapeAppearanceOverlay">@style/smallShapeImage</item>
    </style>

    <style name="smallShapeImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

</resources>